<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:dsj="http://dsj.devsiden.info"
	xmlns:jsflot="http://www.jsflot.org/taglib/jsflot">

<ui:composition template="/template/managerTemplate.jsf">
	<ui:define name="toptabContents">
		<h:panelGrid id="mainPanel" columns="2"
			columnClasses="treeMenu, mainContents" style="height: 100%">
			<ui:include src="treeMenu.jsf"></ui:include>

			<h:panelGroup>
				<rich:tabPanel switchType="ajax" style="width: 100%;"
					contentStyle="width: 100%;">
					<rich:tab id="statisticsTab" label="Statistics">
						<ui:include src="instrumentationPanel.jsf"></ui:include>
					</rich:tab>
					<rich:tab id="groupsTab" label="Groups"
						actionListener="#{groupInstrumentationMbean.processGroupSelection}">
						<ui:include src="groupSetup.jsf"></ui:include>
					</rich:tab>
					<rich:tab id="alertsTab" label="Alerts"
						actionListener="#{alertMBean.navigateToTab}">
						<ui:include src="alertSetup.jsf"></ui:include>
					</rich:tab>
					<rich:tab id="errorsTab" label="Errors">
					Errors
				</rich:tab>
					<rich:tab id="exceptionsTab" label="Exceptions">
					Exceptions
				</rich:tab>
				</rich:tabPanel>

				<ui:include src="chartPanel.jsf"></ui:include>
			</h:panelGroup>
		</h:panelGrid>

	</ui:define>
</ui:composition>
</html>