<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:jsflot="http://www.jsflot.org/taglib/jsflot">


	<a4j:outputPanel id="chartOutputPanel" ajaxRendered="true">
		<jsflot:flotChart id="totalExecTimeChart"
			rendered="#{chartMBean.showChart}"
			value="#{chartMBean.totalExecXYData}"
			actionListener="#{chartMBean.chartListener}"
			chartDraggable="#{!chartMBean.showLiveData}" ajaxSingle="true"
			reRender="timePeriodPanel,callsPerIntervalTimeChart" width="600"
			height="200" showLines="true" fillLines="false" legendColor="#ffffcc"
			showDataPoints="false" legendPosition="nw" showTooltip="true"
			tooltipPosition="sw" tooltipFollowMouse="true" mode="Time"
			timeFormat="%d/%m/%y %h:%M:%S" title="Total Execution Time (ms)"
			subtitle="#{chartMBean.avgExecTimeChartTitle}" 
			xaxisMinValue="#{chartMBean.minXAxis}" xaxisMaxValue="#{chartMBean.maxXAxis}"
			yaxisMinValue="0"
			showXaxisLabels="true" xaxisLabelRotation="10" chartType="Series"
			showYaxisLabels="true" crosshair="xy" />


		<jsflot:flotChart id="avgExecTimeChart"
			rendered="#{chartMBean.showChart}"
			value="#{chartMBean.avgExecXYData}"
			actionListener="#{chartMBean.chartListener}"
			chartDraggable="#{!chartMBean.showLiveData}" ajaxSingle="true"
			reRender="timePeriodPanel,callsPerIntervalTimeChart" width="600"
			height="200" showLines="true" fillLines="false" legendColor="#ffffcc"
			showDataPoints="false" legendPosition="nw" showTooltip="true"
			tooltipPosition="sw" tooltipFollowMouse="true" mode="Time"
			timeFormat="%d/%m/%y %h:%M:%S" title="Average Execution Time (ms)"
			subtitle="#{chartMBean.avgExecTimeChartTitle}"
			xaxisMinValue="#{chartMBean.minXAxis}" xaxisMaxValue="#{chartMBean.maxXAxis}"
			yaxisMinValue="0"
			showXaxisLabels="true" xaxisLabelRotation="10" chartType="Series"
			showYaxisLabels="true" crosshair="xy" />

		<jsflot:flotChart id="callsPerIntervalTimeChart"
			rendered="#{chartMBean.showCallsPerIntervalChart}"
			value="#{chartMBean.callsPerIntervalData}"
			actionListener="#{chartMBean.chartListener}"
			chartDraggable="#{!chartMBean.showLiveData}" ajaxSingle="true"
			reRender="timePeriodPanel,avgExecTimeChart" width="600" height="200"
			showLines="true" fillLines="false" legendColor="#ffffcc"
			showDataPoints="false" legendPosition="nw" showTooltip="true"
			tooltipPosition="sw" tooltipFollowMouse="true" mode="Time"
			timeFormat="%d/%m/%y %h:%M:%S" title="Calls Per Interval"
			subtitle="#{chartMBean.callsPerIntervalChartTitle}"
			xaxisMinValue="#{chartMBean.minXAxis}" xaxisMaxValue="#{chartMBean.maxXAxis}"
			yaxisMinValue="0"
			showXaxisLabels="true" showYaxisLabels="true" xaxisLabelRotation="10"
			chartType="Series" crosshair="xy" />

		<jsflot:flotChart id="valueTimeChart"
			rendered="#{chartMBean.showValueChart}"
			value="#{chartMBean.valueLineData}"
			actionListener="#{chartMBean.chartListener}"
			chartDraggable="#{!chartMBean.showLiveData}" ajaxSingle="true"
			reRender="timePeriodPanel" width="600" height="200" showLines="true"
			legendColumns="2" fillLines="false" legendColor="#ffffcc"
			showDataPoints="false" legendPosition="nw" showTooltip="true"
			tooltipPosition="sw" tooltipFollowMouse="true" mode="Time"
			timeFormat="%d/%m/%y %h:%M:%S" title="Value"
			subtitle="#{chartMBean.valueChartTitle}" showXaxisLabels="true"
			xaxisMinValue="#{chartMBean.minXAxis}" xaxisMaxValue="#{chartMBean.maxXAxis}"
			yaxisMinValue="0"
			xaxisTitle="Time" showYaxisLabels="true" xaxisLabelRotation="10"
			chartType="Series" crosshair="xy" />

		<a4j:region>
			<a4j:poll enabled="#{chartMBean.showLiveData}" interval="#{chartMBean.chartResolution * 1000}"
				reRender="timePeriodPanel, chartOutputPanel">
			</a4j:poll>
		</a4j:region>
	</a4j:outputPanel>
</ui:composition>