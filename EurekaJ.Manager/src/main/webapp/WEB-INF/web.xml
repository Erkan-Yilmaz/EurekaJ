<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                       http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring-manager.xml</param-value>
	</context-param>


	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	
	<!-- CXF Webservice Servlet -->
	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<servlet-class>
			org.apache.cxf.transport.servlet.CXFServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- //CXF Webservice Servlet -->

    <servlet>
        <servlet-name>InstrumentationMenuServlet</servlet-name>
        <servlet-class>org.eurekaj.manager.servlets.InstrumentationMenuServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ChartServlet</servlet-name>
        <servlet-class>org.eurekaj.manager.servlets.ChartServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AlertServlet</servlet-name>
        <servlet-class>org.eurekaj.manager.servlets.AlertServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>InstrumentationGroupServlet</servlet-name>
        <servlet-class>org.eurekaj.manager.servlets.InstrumentationGroupServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>EmailServlet</servlet-name>
        <servlet-class>org.eurekaj.manager.servlets.EmailServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>EurekaJGenericServlet</servlet-name>
        <servlet-class>org.eurekaj.manager.servlets.EurekaJGenericServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/webservices/*</url-pattern>
	</servlet-mapping>

    <servlet-mapping>
        <servlet-name>InstrumentationMenuServlet</servlet-name>
        <url-pattern>/instrumentationMenu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChartServlet</servlet-name>
        <url-pattern>/chart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlertServlet</servlet-name>
        <url-pattern>/alert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstrumentationGroupServlet</servlet-name>
        <url-pattern>/instrumentationGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailServlet</servlet-name>
        <url-pattern>/email</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
		<welcome-file>eurekaJView/EurekaJView.html</welcome-file>
	</welcome-file-list>
</web-app>